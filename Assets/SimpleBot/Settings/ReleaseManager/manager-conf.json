{
  "intents": [
    {
      "name": "fail",
      "match": {
        "type": "verbatim",
        "expressions": [
          "fail",
          "exception",
          "error"
        ]
      },
      "effects": [
        {
          "field": "anger-level",
          "type": "incr",
          "default": 0
        }]
    },
    {
      "name": "succeeded",
      "match": {
        "type": "verbatim",
        "expressions": [
          "fixed",
          "succeeded"
        ]
      },
      "effects": [
          {
            "field": "prev-anger-level",
            "type": "copy-ifield",
            "refer": "anger-level"
          },
          {
            "field": "anger-level",
            "type": "set",
            "value": 0
          },
      ]
    }
  ],
  "responders" : {
    "fail": [
      {
        "responds": [
          "Oh my god... My project looks chaos...",
          "You need to fix the problem as soon as possible!"
        ],
        "condition" : {
          "must" : [
            {
              "range": {"anger-level": { "gte": 3}}
            }
          ]
        }
      },
      {
        "responds": [
          "Can anyone fix the build failure?"
        ]
      }
    ],
    "succeeded": [
      {
        "responds": ["You are my hero!!"],
        "condition" : {
          "must": [
              {
                "range": {"anger-level": { "eq": 0}},
              },
              {
                "range": {"prev-anger-level": { "gte": 1}},
              }
            ]
          }
      },
      {
        "responds": ["Facinating!", "You did a great work!"]
      }
    ],
    "default": [{
      "responds": [
        "I do not know the details but looks nice :-)", "Looks nice?"
      ]
    }]
  }
}
