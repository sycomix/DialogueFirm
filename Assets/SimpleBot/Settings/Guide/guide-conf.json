{
  "intents": [
    {
      "name": "repeat",
      "match": {
        "type": "verbatim",
        "expressions": [ "repeat", "pardon me?" ]
      },
      "effects" : [{
			"field": "anger-level",
			"type": "incr",
			"default": 0
		    }]
    },
    {
      "name": "room-with-presentation-topic",
      "match": {
        "type": "template",
        "slots": [
          {
            "name": "topic",
            "type": "topics"
          }
        ],
        "expressions": [
          "session on ${topic}",
          "${topic}"
        ]
      }
    }
  ],
  "types": [
    {
      "name": "topics",
      "values": [ "docker", "machine learning", "jupyter" ]
    }
  ],
  "responders":
  {
    "room-with-presentation-topic": [
      {
	"responds": [ "Session on Docker is held in room 445 from 15:00" ],
	"condition": {
	  "term": { "topic" : "docker"}
	}		      
      },
      {
	"responds": [ "Session on Jupyter Notebook is held in room 134 from 12:00" ],
	"condition": {
	  "term": { "topic" : "jupyter"}
	}	      
      }	
    ],
    "repeat": [
      {
	"responds": [ "Please call support center. The number is +81-908483-122344" ],
	"condition": {
	  "must": [
	    {
	      "range": { "anger-level" : { "gte": 2 }}
	    }
	  ]
	}
      }
    ],
    "default": [{
      "target": "default",
      "responds": [ "Sorry I do not understand what you mean." ]
    }]
  }
}
